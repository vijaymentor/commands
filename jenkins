yum install epel-release  java-1.8.0-openjdk-devel vim wget ntp -y
systemctl stop firewalld;systemctl disable firewalld
ntpdate pool.ntp.org
wget http://www.trieuvan.com/apache/maven/maven-3/3.6.2/binaries/apache-maven-3.6.2-bin.tar.gz
tar xvf apache-maven-3.6.2-bin.tar.gz 
mv apache-maven-3.6.2  /usr/local/apache-maven
 
vim ~/.bash_profile

In this file

export JAVA_HOME=/usr/lib/jvm/java-1.8.0
export JRE_HOME=/usr/lib/jvm/java-1.8.0/jre
PATH=$PATH:$HOME/bin:$JAVA_HOME/bin:$JRE_HOME/bin
export M2_HOME=/usr/local/apache-maven
export M2=$M2_HOME/bin 
export PATH=$M2:$PATH

source ~/.bash_profile

mvn -version



wget -O /etc/yum.repos.d/jenkins.repo http://pkg.jenkins-ci.org/redhat/jenkins.repo

rpm --import https://pkg.jenkins.io/redhat/jenkins.io.key
yum install jenkins

systemctl restart jenkins;systemctl enable jenkins;systemctl status jenkins

The following plugins needs to be installed

dashboard view
Build Pipeline
Deploy to container
Email Extension Template

